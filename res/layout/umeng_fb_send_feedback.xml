<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/umeng_fb_rootId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solid_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip" >

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp" >

            <TextView
                android:id="@+id/umeng_fb_goback_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="@drawable/actionbar_bt_bg"
                android:scaleType="fitXY"
                android:textColor="@android:color/transparent"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/titlebar_ic_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/umeng_fb_conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/umeng_fb_see_list_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dip"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/line" />
    </LinearLayout>

    <EditText
        android:id="@+id/umeng_fb_content"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="请输入您的反馈意见"
        android:maxEms="10"
        android:minEms="10"
        android:paddingLeft="9dip"
        android:paddingTop="10dip"
        android:textColor="#737373"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/feedback_qq"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/input_contact"
            android:hint="留下您的电话或QQ"
            android:inputType="number"
            android:paddingLeft="9dip"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/umeng_fb_submit"
            android:layout_width="70dip"
            android:layout_height="43dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/feedback_qq"
            android:background="@drawable/umeng_fb_submit_selector"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/solid_white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/umeng_fb_age_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/umeng_fb_gender_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dip"
            android:layout_toRightOf="@id/umeng_fb_age_spinner"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>