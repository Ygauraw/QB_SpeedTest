<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        style="@style/textview_normal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="@string/setting_network"
        android:textSize="17sp" />

    <LinearLayout
        style="@style/linearlayout_normal"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="120dp"
        android:orientation="vertical" >

        <FrameLayout
            style="@style/linearlayout_normal"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/more_btn_top"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/wifi_setting"
                style="@style/textview"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:text="@string/setting_wifi"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/wifi_info"
                style="@style/textview_normal"
                android:paddingLeft="20dp"
                android:paddingTop="37dp"
                android:text="chuangxin"
                android:textSize="17sp" />

            <Button
                android:id="@+id/wifi_btn"
                style="@style/setting_button"
                android:layout_gravity="right"
                android:layout_margin="6dp" />

            <ImageView
                style="@style/imagebutton_normal"
                android:layout_width="fill_parent"
                android:layout_gravity="bottom"
                android:contentDescription="@string/app_name"
                android:src="@drawable/split_bar_more" />
        </FrameLayout>

        <FrameLayout
            style="@style/linearlayout_normal"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/more_btn_mid"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/gprs_setting"
                style="@style/textview"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:text="@string/setting_gprs"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/gprs_info"
                style="@style/textview_normal"
                android:paddingLeft="20dp"
                android:paddingTop="37dp"
                android:text="CMCC"
                android:textSize="17sp" />

            <Button
                android:id="@+id/gprs_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@string/app_name" />

            <ImageView
                style="@style/imagebutton_normal"
                android:layout_width="fill_parent"
                android:layout_gravity="bottom"
                android:contentDescription="@string/app_name"
                android:src="@drawable/split_bar_more" />
        </FrameLayout>

        <FrameLayout
            style="@style/linearlayout_normal"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/more_btn_bottom"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/data_setting"
                style="@style/textview"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:text="@string/setting_gprs"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/data_info"
                style="@style/textview_normal"
                android:paddingLeft="20dp"
                android:paddingTop="37dp"
                android:text="cmnet"
                android:textSize="17sp" />

            <Button
                android:id="@+id/data_btn"
                style="@style/setting_button"
                android:layout_gravity="right"
                android:layout_margin="6dp" />

            <ImageView
                style="@style/imagebutton_normal"
                android:layout_width="fill_parent"
                android:layout_gravity="bottom"
                android:contentDescription="@string/app_name"
                android:src="@drawable/split_bar_more" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>