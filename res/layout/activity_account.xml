<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        style="@style/textview_normal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="@string/account_tie"
        android:textSize="17sp" />

    <LinearLayout
        style="@style/linearlayout_normal"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="120dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/weibo_account"
            style="@style/linearlayout_normal"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/more_btn_top" >

            <TextView
                android:id="@+id/weibo_txt"
                style="@style/textview"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:text="@string/account_weibo"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/weibo_logo"
                style="@style/imagebutton_normal"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/weibo_txt"
                android:contentDescription="@string/app_name"
                android:src="@drawable/umeng_socialize_sina_off" />
        </RelativeLayout>

        <ImageView
            style="@style/imagebutton_normal"
            android:layout_width="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/split_bar_more" />

        <RelativeLayout
            android:id="@+id/tweibo_account"
            style="@style/linearlayout_normal"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/more_btn_bottom"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tecent_txt"
                style="@style/textview"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:text="@string/account_tecent"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/tweibo_logo"
                style="@style/imagebutton_normal"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tecent_txt"
                android:contentDescription="@string/app_name"
                android:src="@drawable/umeng_socialize_tx_off" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>