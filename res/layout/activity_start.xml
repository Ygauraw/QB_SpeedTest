<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/loading_gray"
    android:orientation="vertical" >

    <ImageView
        style="@style/imageview_normal"
        android:layout_width="fill_parent"
        android:layout_gravity="top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bg_above" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/light_above"
            style="@style/imageview_normal"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:contentDescription="@string/app_name"
            android:src="@drawable/light_above" />

        <ImageView
            android:id="@+id/light_low"
            style="@style/imageview_normal"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:contentDescription="@string/app_name"
            android:src="@drawable/light_low" />

        <ImageView
            style="@style/imageview_normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/loading_btn" />

        <Button
            android:id="@+id/pressed_view"
            style="@style/imageview_normal"
            android:layout_gravity="center"
            android:background="@drawable/button_start_test_bg"
            android:contentDescription="@string/app_name"
            android:textColor="@color/loading_red"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/light_view"
            style="@style/imageview_normal"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_light" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/bg_low" >

        <TextView
            android:id="@+id/issue_info"
            style="@style/textview_normal"
            android:layout_width="fill_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>