<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/website_item_layout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/website_item_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/jumei" />

            <ImageView
                android:id="@+id/website_item_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/website_item_icon"
                android:layout_alignRight="@id/website_item_icon"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/website_item_tag"
                style="@style/imageview_normal"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_mark_fast" />

            <ImageView
                android:id="@+id/website_item_mask"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/pic_mask_layer"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/website_item_load"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/pic_loading" />
        </RelativeLayout>

        <TextView
            android:id="@+id/website_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="2dp"
            android:text="@string/app_name"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/website_item_speed"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/split_website_speed"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="256KB/s"
            android:textColor="@color/text_website_speed"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>